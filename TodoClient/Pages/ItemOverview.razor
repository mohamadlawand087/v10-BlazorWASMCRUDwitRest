@page "/itemoverview"

<h1>All items</h1>

<div class="row">
    <div class="col-md-12">
        <a href="/itemedit" class="btn btn-success">
            Create Item
        </a>
    </div>
</div>
<br />
@if(Items == null)
{
    <p>Loading...</p>
}
else{
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>Done</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Done</td>
                    <td>
                        <a href="@($"itemdetail/{item.Id}")" class="btn btn-success">
                        detail
                        </a>
                        <a href="@($"itemedit/{item.Id}")" class="btn btn-warning">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}