@page "/itemEdit"
@page "/itemEdit/{Id}"

<div class="row">
    <div class="col-md-12">
        <h1>Details for @Item.Title</h1>
    </div>
    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>
    <br />
    <EditForm Model="@Item" OnValidSubmit="@HandleValidRequest" OnInvalidSubmit="HandleInvalidRequest">
        <div class="form-group">
            <label class="col-md-3">Title</label>
            <InputText class="col-md-8" @bind-Value="@Item.Title" id="Title"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3">Description</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@Item.Description" id="Description"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">Done</label>
            <InputCheckbox class="col-md-8" @bind-Value="@Item.Done" id="Done"></InputCheckbox>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-warning">Save Item</button>
            <a @onclick="@goToOverview" class="btn btn-primary">Back</a>
            @if(!String.IsNullOrEmpty(Id))
            {
                <a @onclick="@DeleteItem" class="btn btn-danger">Delete Item</a>
            }
        </div>

        <label>@Message</label>
    </EditForm>

    
</div>